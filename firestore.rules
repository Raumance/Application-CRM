rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // RÈGLES FIRESTORE - CRM CarWazPlan
    // Accès uniquement pour les utilisateurs authentifiés (Firebase Auth)
    
    match /users/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /prospects/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /devis/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /taches/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /vehicules/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /factures/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /interactions/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /banques/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /relancesemails/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // Par défaut : refuser tout le reste
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
